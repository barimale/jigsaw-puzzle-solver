<Window x:Class="Genetic.Algorithm.Tangram.Solver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Genetic.Algorithm.Tangram.Solver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Background="#FF0B8FAE" Loaded="Canvas_Loaded">
            <Button Content="RUN" Height="22" Canvas.Left="739" Canvas.Top="10" Width="51" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>
            <Button Content="PAUSE" Height="22" Canvas.Left="740" Canvas.Top="36" Width="50" Click="Button_Click_1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="STOP" Height="22" Canvas.Left="739" Canvas.Top="64" Width="51" Click="Button_Click_2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>

    </Grid>
</Window>
